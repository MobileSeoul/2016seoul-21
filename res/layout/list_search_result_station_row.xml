<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical"
    android:paddingBottom="13dp"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingTop="13dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_search_result_station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tv_search_result_station_distance"
            android:fontFamily="sans-serif"
            android:text="name"
            android:textColor="#707070"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_search_result_station_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif"
            android:text="거리: 10m"
            android:textColor="#707070" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_search_result_station_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="address"
        android:textColor="#7D7D7D"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btn_destination_start"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/common_text_btn_selector"
            android:fontFamily="sans-serif"
            android:text="출발"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btn_destination_finish"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/common_text_btn_selector"
            android:fontFamily="sans-serif"
            android:text="도착"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btn_find_in_map"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/common_text_btn_selector"
            android:fontFamily="sans-serif"
            android:text="지도보기"
            android:textColor="@android:color/white"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>
